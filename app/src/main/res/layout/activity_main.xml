<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#06131010">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:nestedScrollingEnabled="true">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Spinner
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                style="@style/spinnerDropDownItemStyle"
                android:layout_column="29"
                android:layout_span="2" />

            <Button
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:text="Connect"
                android:id="@+id/button"
                android:layout_column="31"
                android:onClick="connectBluetooth"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:background="#d9534f"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:layout_marginBottom="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Welcome"
                android:id="@+id/a"
                android:layout_column="29"
                android:onClick="welcome"
                android:textColor="#ffffffff"
                android:background="#ff47b224"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:enabled="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Salute"
                android:id="@+id/b"
                android:layout_column="30"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="Salute"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:enabled="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Sit Dance"
                android:id="@+id/c"
                android:layout_column="31"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="sit"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Lay down"
                android:id="@+id/button20"
                android:layout_column="29"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="laydown"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Get Up"
                android:id="@+id/e"
                android:layout_column="30"
                android:onClick="getup"
                android:textColor="#ffffffff"
                android:background="#ff47b224"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Sit"
                android:id="@+id/f"
                android:layout_column="31"
                android:onClick="rest"
                android:textColor="#ffffffff"
                android:background="#ff47b224"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Go Left"
                android:id="@+id/button8"
                android:layout_column="29"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="moveleft"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Walk"
                android:id="@+id/button9"
                android:layout_column="30"
                android:background="#fff58a17"
                android:textColor="#ffffffff"
                android:layout_marginLeft="5dp"
                android:onClick="walk"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Go Right"
                android:id="@+id/button10"
                android:layout_column="31"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:nestedScrollingEnabled="false"
                android:onClick="moveright"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Left turn"
                android:id="@+id/button15"
                android:layout_column="29"
                android:background="#fff58a17"
                android:textColor="#ffffffff"
                android:onClick="turnleft"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Stop"
                android:id="@+id/button16"
                android:layout_column="29"
                android:background="#d9534f"
                android:textColor="#ffffffff"
                android:layout_marginLeft="5dp"
                android:onClick="stop"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Right turn"
                android:id="@+id/button17"
                android:layout_column="31"
                android:background="#fff58a17"
                android:textColor="#ffffffff"
                android:onClick="rightturn"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Push Up"
                android:id="@+id/button21"
                android:layout_column="29"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="pushup"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Back"
                android:id="@+id/button2"
                android:layout_column="29"
                android:layout_marginLeft="5dp"
                android:background="#fff58a17"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff"
                android:layout_marginBottom="5dp"
                android:onClick="backwalk" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Push Up 1"
                android:id="@+id/button22"
                android:layout_column="31"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="pushup1"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginBottom="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Dance1"
                android:id="@+id/button24"
                android:layout_column="29"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="dance1"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Dance2"
                android:id="@+id/button25"
                android:layout_column="30"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="dance2"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginBottom="5dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Hand (D)"
                android:id="@+id/button3"
                android:layout_column="31"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="#ff47b224"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff"
                android:onClick="handdance" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="&lt;----"
                android:id="@+id/button4"
                android:layout_column="29"
                android:layout_marginBottom="5dp"
                android:background="#fff58a17"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:onClick="seeright" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="Fight"
                android:id="@+id/button12"
                android:layout_column="30"
                android:background="#ff47b224"
                android:textColor="#ffffffff"
                android:onClick="fight"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="---->"
                android:id="@+id/button5"
                android:layout_column="31"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff58a17"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:onClick="seeleft" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
</ScrollView>